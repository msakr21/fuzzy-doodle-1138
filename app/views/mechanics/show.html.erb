<h1> Mechanic: <%= @mechanic.name %> </h1>
<h3> Years of Experience: <%= @mechanic.years_experience %></h3>
<h3> Rides Working On:</h3>
<% @rides.each do |ride| %>
<%= ride.name %>
<% end %>

<h3> Add a ride to workload: </h3>
<%= form_with model: @mechanic, local: true do |form| %>
  <%= form.label :ride_id %>
  <%= form.number_field :ride_id %>
  <%= form.submit "Submit" %>
<% end%>